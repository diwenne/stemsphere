{
  "name": "stemsphere-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "landing",
    "courses"
  ],
  "scripts": {
    "dev:landing": "npm run dev --workspace=landing",
    "dev:courses": "npm run dev --workspace=courses",
    "build:landing": "npm run build --workspace=landing",
    "build:courses": "npm run build --workspace=courses",
    "build:all": "npm run build:landing && npm run build:courses",
    "install:all": "npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
